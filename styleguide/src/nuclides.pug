extends ./common/layout.pug

include ./common/sections.pug
include ./common/toc.pug

block nav
  -var selected = 'Nuclides';

block title
  | Nuclides

block content
  .SG-top-wrapper 
    .SG-row
      .SG-gr-12
        .SG-h1 Nuclides

    .SG-row
      .SG-gr-6
        .SG-h3 Navigation
      .SG-gr-6
        .SG-h3 What are Nuclides?

    .SG-row
      .SG-gr-6.SG-toc
        +toc(styles.Nuclides)
      .SG-gr-6
        p.SG-p.
          Nuclides are parts of the stylesheet source that are not directly useable on their own. These are building blocks that can create atoms or more complex elements.
        p.SG-p.
          Examples include mixins, variables (colors, fonts famileis and sizes), or configuration settings.     
  
  if styles.Nuclides
    +section-second-level(styles.Nuclides)
