extends ./common/layout.pug

include ./common/sections.pug
include ./common/toc.pug

block title
  | Structures

block nav
  -var selected = 'Structures';

block content
  .SG-top-wrapper 
    .SG-row
      .SG-gr-12
        .SG-h1 Structures

    .SG-row
      .SG-gr-6
        .SG-h3 Navigation
      .SG-gr-6
        .SG-h3 What are Structures?

    .SG-row
      .SG-gr-6.SG-toc
        +toc(styles.Structures)
      .SG-gr-6
        .SG-p.
          Structures are the most complex types of design.
        .SG-p.  
          They may consist of multiple molecules, a large number of atoms linked together with molecules, or even may serve as wrappers for molecules. 
        .SG-p.
          The header of this page is surely a structure and the grid system serves as wrapper for molecules.

  if styles.Structures
    +section-second-level(styles.Structures)
