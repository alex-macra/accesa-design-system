{
  "name": "accesa-design-system",
  "version": "0.9.3-beta",
  "description": "starter package for web-based projects",
  "main": "index.js",
  "scripts": {
    "css:build": "node-sass -r sass sass/main.scss -o css --trace",
    "css:build-compressed": "node-sass -r --output-style compressed sass sass/main.scss -o css",
    "css:build-minified": "uglifycss css/main.css > css/main.min.css",
    "css:build-nested": "node-sass -r --output-style nested sass sass/main.scss -o css",
    "css:watch": "npm run css:build && npm run css:build -- -w",
    "styleguide": "nucleus --config styleguide-config.json"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/alexandrumacra/accesa-design-system"
  },
  "author": "alex macra",
  "license": "OSL-3.0",
  "devDependencies": {
    "nucleus-styleguide": "^1.1.1",
    "node-sass": "^4.8.3",
    "uglifycss": "0.0.29"
  }
}