{
  "name": "accesa-ui-starter",
  "version": "0.1.4",
  "description": "starter package for web-based projects",
  "main": "index.js",
  "scripts": {
    "css:build": "node-sass -r sass sass/main.scss -o css",
    "css:watch": "npm run css:build && npm run css:build -- -w",
    "css:lint": "stylelint css/main.css > css/lintOutput.txt",
    "sass:lint": "stylelint sass/**/**/**/*.scss > sass/lintOutput.txt"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/alexandrumacra/accesa-ui-starter"
  },
  "author": "alex macra",
  "license": "OSL-3.0",
  "devDependencies": {
    "font-awesome": "^4.7.0",
    "node-sass": "^4.7.2",
    "stylelint": "^9.1.1",
    "stylelint-scss": "^2.5.0",
    "stylelint-config-sass-guidelines": "^5.0.0"
  }
}